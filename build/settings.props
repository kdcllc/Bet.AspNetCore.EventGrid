<Project>

  <PropertyGroup Label="Basic Settings">
    <VersionPrefix>1.1.0-preview</VersionPrefix>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
    <NoWarn>$(NoWarn);CS1591;</NoWarn>
    <TieredCompilation>true</TieredCompilation>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <PropertyGroup Label="Nuget Package Settings">
    <Description>AspNetCore EventGrid middleware and more.</Description>
    <PackageProjectUrl>https://github.com/kdcllc/Bet.AspNetCore.EventGrid</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kdcllc/Bet.AspNetCore.EventGrid.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicense>https://github.com/kdcllc/Bet.AspNetCore.EventGrid/master/LICENSE</PackageLicense>
    <PackageIconUrl>https://raw.githubusercontent.com/kdcllc/Bet.AspNetCore.EventGrid/master/img/logo64x64.png</PackageIconUrl>
    <PackageTags>aspnetcore, dotnet, azure event grid, messaging, azure event grid topic</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Label="Ownership Settings">
    <Company>King David Consulting LLC</Company>
    <Authors>kdcllc</Authors>
    <Copyright>Copyright Â© King David Consulting LLC</Copyright>
  </PropertyGroup>

  <PropertyGroup Label="SourceLink Settings">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
</Project>
